import midi

class Note(object):
    def __init__(self, duration, image, pitch="C5"):
        self.duration = duration
        self.pitch = pitch
        self.image = image
        self.loudness = 100
    def playNote(self, track):
        # play audio file *pitch* for self.duration time
        on = midi.NoteOnEvent(tick=0, velocity=self.loudness, pitch=self.pitch)
        track.append(on)
        off = midi.NoteOffEvent(tick=self.duration, pitch=self.pitch)
        track.append(off)
    # getters and setters
    def getPitch(self):
        return self.pitch
    def setPitch(self, p):
        self.pitch = p
    def getDuration(self):
        return self.duration

